#!/bin/bash

SRC="binutils"

sed '6009s/$add_dir//' -i ltmain.sh

mkdir -v build
cd build

../configure --prefix=/usr \
	--build=$(../config.guess) \
	--host=$LFS_TGT \
	--disable-nls \
	--enable-shared \
	--disable-werror \
	--disable-gprofng \
	--disable-multilib \
	--enable-64-bit-bfd \
	--enable-default-hash-style=gnu

make
make DESTDIR=$LFS install
rm -v $LFS/usr/lib/lib{bfd,ctf,ctf-nobfd,opcodes}.{a,la}
